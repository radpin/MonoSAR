@model MonoSAR.Models.HomeScreen
@{
    ViewData["Title"] = "Home Page";
}

<div id="logo" style="width:100%; text-align:center; margin-top:20px; margin-bottom:10px;">
    <img src="@Model.LogoPath" alt="" width="250" title="" />
</div>

<div class="row">
    <div class="col-md-3">
        <h4>Training</h4>
        <ul>
            <li><a href="/TrainingOfficer/ViewTrainingClasses">Training Occurrences</a></li>
            <li><a href="/TrainingOfficer/Index">Recently Recorded Trainings</a></li>
            <li><a href="/TrainingOfficer/RecordTrainingOccurrence">Record Training Occurrence</a></li>
        </ul>
        <h4>Training Types</h4>
        <ul>
            <li><a href="/TrainingOfficer/ViewTrainings">Training Types</a></li>
            <li><a href="/TrainingOfficer/CreateTraining">Create Training Type</a></li>
        </ul>
        <h4>CPR</h4>
        <ul>
            <li><a href="/TrainingOfficer/RecordCPR">Record CPR</a></li>
            <li><a href="/TrainingOfficer/CPRList">Recent CPR List</a></li>
        </ul>
        <h4>Medical</h4>
        <ul>
            <li><a href="/TrainingOfficer/RecordMedical">Record Medical</a></li>
        </ul>

    </div>
    <div class="col-md-3">
        <h4>Members</h4>
        <ul>
            <li><a href="/MembershipOfficer/SummerReadyReport">Summer Qualified</a></li>
            <li><a href="/MembershipOfficer/WinterReadyReport">Winter Qualified</a></li>
            <li><a href="/MembershipOfficer/MemberReport">All Members</a></li>
            <li><a href="/MembershipOfficer/CreateMember">Create Member</a></li>
            <li><a href="/MembershipOfficer/MemberParticipation">Participation</a></li>
        </ul>
        <h4>Candidates</h4>
        <ul>
            <li><a href="/MembershipOfficer/CandidateReportCurrentYear">Candidates (@Model.CurrentYearPretty)</a></li>
            <li><a href="/MembershipOfficer/CandidateReport">Candidates (All)</a></li>
        </ul>
        <h4>Rescue</h4>
        <ul>
            <li><a href="/MembershipOfficer/RescueReport">Rescue Members</a></li>
        </ul>
        <h4>Expirations</h4>
        <ul>
            <li><a href="/MembershipOfficer/ExpiredMedicalReport">Expired Medical Members</a></li>
            <li><a href="/MembershipOfficer/ExpiredCPRReport">Expired CPR Members</a></li>
        </ul>
    </div>
    <div class="col-md-3">
        <h3>Operations</h3>
           <form asp-controller="Callout" method="post" asp-action="Start" onsubmit="return confirm('Really start callout?')">
               <ul>
                   <li><a href="/OperationsOfficer/Index">All Operations</a></li>
                   <li><a href="/OperationsOfficer/CreateOperation">Create Operation</a></li>
                   @if (User.IsInRole("Admin"))
                   {
                       <li><button type="submit" class="alert-warning">Start Callout</button> </li>
                   }
               </ul>
            </form>
    </div>
    <div class="col-md-3">
        <h3>My Info</h3>
        <ul>
            <li><a href="/MyInfo/Index">View My Info</a></li>
            <li><a href="/MyInfo/Edit">Edit My Info</a></li>
            <li><a href="/Blob/Index">Forms &amp; Docs</a></li>
        </ul>
        <h3>Training Resources</h3>
        <ul>
            <li><a href="/trainingofficer/gpstraining">GPS Training</a></li>
        </ul>
    </div>
</div>

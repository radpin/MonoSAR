@model MonoSAR.Models.Training.CPRSummaryItem

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Training Summary Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">

        <div class="alert alert-secondary" role="alert">
            <h4>CPR Record</h4>
            <table>
                <tr>
                    <td>Training:</td>
                    <td>@Html.DisplayFor(model => model.Title)</td>
                </tr>
                <tr>
                    <td>Member:</td>
                    <td>@Html.DisplayFor(model => model.MemberNameLast), @Html.DisplayFor(model => model.MemberNameFirst) </td>
                </tr>
                <tr>
                    <td>Issued:</td>
                    <td>@Html.DisplayFor(model => model.IssuedPretty)</td>
                </tr>
                <tr>
                    <td>Expiration:</td>
                    <td>@Html.DisplayFor(model => model.Expiration)</td>
                </tr>
            </table>
        </div>


        <form asp-action="EditCPR">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Issued" class="control-label"></label>
                <input asp-for="Issued" type="date" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Expiration" class="control-label"></label>
                <input asp-for="Expiration" typeof="date" class="form-control" type="date" />
                <input asp-for="ID" hidden="hidden" type="hidden" />

            </div>

            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
        <form asp-action="DeleteCPR" onsubmit="return confirm('Really delete this?')">
            <input asp-for="ID" hidden="hidden" type="hidden" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


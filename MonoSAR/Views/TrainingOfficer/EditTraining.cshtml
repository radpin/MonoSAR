@model MonoSAR.Models.Training.TrainingListItem

@{
    ViewData["Title"] = "EditTraining";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Training</h2>

<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-action="EditTraining">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <input asp-for="ID" hidden="hidden" type="hidden" />

            </div>

            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

<div>
    <a asp-action="ViewTrainings">Back to List</a>
</div>


@model MonoSAR.Models.Training.TrainingClassStudentSummary
@{
    ViewData["Title"] = "TrainingOfficer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Recently Recorded Trainings</h2>
<a href="/TrainingOfficer/RecordTrainingOccurrence/">Record Training Class</a>

<div>

    <table class="table">
        <thead>
            <tr>
                <th>Training Date</th>
                <th>Member</th>
                <th>Training</th>
                <th>Hours</th>
                <th>Recorded (UTC)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>


       @foreach (var item in Model)
        {
            <tr>
                <td>@item.TrainingDatePretty</td>
                <td><a href="/TrainingOfficer/ViewMember/@item.MemberID">@item.MemberName</a></td>
                <td>@item.TrainingTitle</td>
                <td>@item.Hours</td>
                <td>@item.CreatedPretty</td>
                <td><a href="/TrainingOfficer/Edit/@item.TrainingClassStudentID">Edit</a></td>
            </tr>
        }
            <tr></tr>


        </tbody>
    </table>



</div>



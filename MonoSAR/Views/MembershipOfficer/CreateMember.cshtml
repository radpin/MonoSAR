@model MonoSAR.Models.Membership.MemberInsert

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Membership</h2>

<h4>Create New Member</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateMember">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" required class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" required class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" required class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" required class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <input asp-for="State" required class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zip" class="control-label"></label>
                <input asp-for="Zip" required class="form-control" />
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" required class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Joined" class="control-label"></label>
                <input asp-for="Joined" required type="date" class="form-control" />
                <span asp-validation-for="Joined" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneHome" class="control-label"></label>
                <input asp-for="PhoneHome" class="form-control" type="tel" />
                <span asp-validation-for="PhoneHome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneWork" class="control-label"></label>
                <input asp-for="PhoneWork" class="form-control" type="tel" />
                <span asp-validation-for="PhoneWork" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneCell" class="control-label"></label>
                <input asp-for="PhoneCell" required class="form-control" type="tel" />
                <span asp-validation-for="PhoneCell" class="text-danger"></span>
            </div>
            <div class="form-group">
                <lablel class="control-label">Capacity</lablel>
                @Html.DropDownListFor(x => x.CapacityID, new SelectList(Model.CapacityStubs, "ID", "Title"), new { @class = "form-control", })
                <span asp-validation-for="CapacityID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="/MemberReport">Back to List</a>
</div>

